# List Operations

# Lists
my_lst = []
even_lst =[]
odd_lst = []

# User Input Functions
print("Please enter 5 numeric values:")
user1 = int(input("> "))
user2 = int(input("> "))
user3 = int(input("> "))
user4 = int(input("> "))
user5 = int(input("> "))
my_lst.append(user1)
my_lst.append(user2)
my_lst.append(user3)
my_lst.append(user4)
my_lst.append(user5)

# Method Functions
sort = sorted(my_lst)
add_total = sum(my_lst)
prod_total = user1 * user2 * user3 * user4 * user5
average = mean(my_lst)
middle = median(my_lst)
# Didn't know how to do this
# frequent = mode(my_lst)
maxi = max(my_lst)
mini = min(my_lst)
no_duplicates = []
for n in my_lst:
    if n not in no_duplicates:
        no_duplicates.append(n)
for i in my_lst:
    if i % 2 == 0:
        even_lst.append(i)
    else:
        odd_lst.append(i)

# Print Statements
print(f"Your numeric list is {my_lst}")
print(f"Your list when ordered {sort}")
input("Input anything to continue..")
